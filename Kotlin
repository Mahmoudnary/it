                   -:ماهي لغة الكوتلن
هي لغة برمجية كائنية تعمل علي منصة جافا
  

                المتغيرات
  var num:Int            عدد صحيح
  var num:Short      عدد قصير
  var num:Long         عدد كبير
  var num:Float       عدد عشري
  var num:Double    عدد مضاعف
  var name:String    متغير نصي
  var b:Boolean      متغير تعبيري
  var c:Char          متغير حرفي
                               

                   -: مثال ١   
             ويأخذ قيمة ١٦   A تعريف متغير رقمي
Var a=16

                      مثال٢
 ويحول قيمته من صحيح إلي خاطئ Stateتعريف متغير تعبير
  var  state:Boolean = true
      state = false
           
                     مثال ٣
                       وجود المتغير داخل الاقواس 
          fun  fx ( ){
          var a = 3 
          a = 5
          }
        
                     العمليات الحسابية  





ويمكن تطبيقها على جميع العمليات الحسابية مثل


a+b    تعني المتغير a + المتغير b   مثال: 5+8=13


a-b    تعني المتغير a - المتغير b   مثال: 5-2=3


a*b    تعني المتغير a * المتغير b   مثال: 5*8=40


a/b    تعني المتغير a / المتغير b   مثال: 4/8=2


a%b    تعني باقي قسمة المتغير a على المتغير b  مثال: 4%8=0


a..b   تعني اختصار الارقام بينها   مثال: 5..8=5،6،7،8
